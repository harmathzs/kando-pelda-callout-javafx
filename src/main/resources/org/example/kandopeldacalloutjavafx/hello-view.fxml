<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" minHeight="600.0" minWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.kandopeldacalloutjavafx.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="Question" styleClass="lbl lbl-info" />
   <TextArea id="questionTextArea" fx:id="questionTextArea" prefHeight="200.0" prefWidth="200.0" text="How to tie a tie?" />
    <Button onAction="#onHelloButtonClick" styleClass="btn btn-primary" text="Ask now" />
   <TextArea id="answerTextArea" fx:id="answerTextArea" editable="false" prefHeight="200.0" prefWidth="200.0" text="&lt;answer will be here&gt;" />
</VBox>
